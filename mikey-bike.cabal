cabal-version:      2.4

name:               mikey-bike
version:            0.1.0.0
build-type:         Simple

executable site
  main-is:          Main.hs
  hs-source-dirs:   src
  ghc-options:      -threaded
  default-language: Haskell2010
  build-depends:    base == 4.*
                  , hakyll == 4.12.*
                  , time >=1.6
                  , time-locale-compat >=0.1
                  , hxt >=9.3
                  , filepath >=1.4
                  , hfsevents
